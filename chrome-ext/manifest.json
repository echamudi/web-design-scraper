{
  "name": "Web Design Scraper",
  "version": "1.0.0",
  "description": "Extract and inspect web design measurements!",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/ico_16.png",
      "32": "/assets/ico_32.png",
      "48": "/assets/ico_48.png",
      "128": "/assets/ico_128.png"
    }
  },
  "icons": {
    "16": "/assets/ico_16.png",
    "32": "/assets/ico_32.png",
    "48": "/assets/ico_48.png",
    "128": "/assets/ico_128.png"
  }
}
