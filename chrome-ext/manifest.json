{
  "name": "Smart Web Design Scraper",
  "version": "1.0",
  "description": "Smart Web Design Scraper",
  "manifest_version": 2,
  "permissions": [
    "tabCapture",
    "activeTab",
    "declarativeContent",
    "storage",
    "captureVisibleTab",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "options_page": "preferences.html"
}